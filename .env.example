# Hyperion Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AZURE AD CONFIGURATION
# =============================================================================
# Get these from your Azure AD App Registration
AZURE_TENANT_ID=12345678-1234-1234-1234-123456789abc
AZURE_CLIENT_ID=87654321-4321-4321-4321-abcdef123456
AZURE_CLIENT_SECRET=your-azure-client-secret-here

# =============================================================================
# AZURE KEY VAULT (RECOMMENDED)
# =============================================================================
# Store sensitive credentials securely in Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-hyperion-vault.vault.azure.net/
KEY_VAULT_SECRET_NAME=hyperion-ad-password

# =============================================================================
# ACTIVE DIRECTORY (OPTIONAL)
# =============================================================================
# For on-premises Active Directory integration
AD_DOMAIN=your-domain.com
AD_USERNAME=hyperion-service-account
AD_PASSWORD_SECRET=ad-service-password

# =============================================================================
# POWERBI CONFIGURATION
# =============================================================================
# PowerBI Service Principal for usage analytics
POWERBI_CLIENT_ID=your-powerbi-app-id
POWERBI_CLIENT_SECRET=your-powerbi-secret
POWERBI_TENANT_ID=your-tenant-id

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=your-secure-session-secret-here

# Security settings
ENABLE_HTTPS=true
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Application Insights (optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# DEMO MODE (FOR TESTING)
# =============================================================================
# Set to true to enable demo mode with mock data
DEMO_MODE=false